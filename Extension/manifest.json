{
  "manifest_version": 3,
  "name": "提督業はおしまい！",
  "version": "1.0",
  "description": "艦これの情報表示拡張",
  "permissions": [
    "tabs",
    "notifications"
  ],
  "content_scripts": [
    {
      "type": "module",
      "matches": [
        "https://play.games.dmm.com/game/kancolle",
        "*://*.kancolle-server.com/*"
      ],
      "js": [
        "ui.js",
        "content.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "teimai_style.css",
        "xhr_hook_injector.js",
        "images/mikasa.png"
      ],
      "matches": [
        "*://play.games.dmm.com/*",
        "*://*.kancolle-server.com/*"
      ]
    }
  ]
}